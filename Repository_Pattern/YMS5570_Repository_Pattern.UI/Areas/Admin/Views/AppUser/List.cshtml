
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model IEnumerable<YMS5570_Repository_Pattern.DAL.ORM.Entity.Concrete.AppUser>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="box">
            <div class="box-header">
                <h4 class="box-title">List of Users</h4>
            </div>
                <div class="box-body">
                    <table class="table table-bordered table hover">
                        <thead>
                        <tr>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Role</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>
                                <td>@item.Role</td>
                                <td><a href="/Admin/AppUser/Update/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                                <td><a href="/Admin/AppUser/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
