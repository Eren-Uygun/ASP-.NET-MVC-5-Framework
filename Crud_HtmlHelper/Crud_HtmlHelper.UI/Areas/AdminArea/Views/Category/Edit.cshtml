
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayoutPage.cshtml";
}


@model Crud_HtmlHelper.UI.Areas.AdminArea.Models.CategoryDTO

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edit Category</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
           
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryName)
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "CategoryName" })
                @Html.ValidationMessageFor(x => x.CategoryName)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>

            <div class="card-footer">
                <input type="submit" name="submit" class="btn btn-primary btn-block" />
            </div>
        }
    </div>

</div>