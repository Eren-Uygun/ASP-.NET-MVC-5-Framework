
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayoutPage.cshtml";
}

@model Crud_HtmlHelper.UI.Areas.AdminArea.Models.CategoryDTO

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Add Category</h3>
            </div>
            <div class="card-body form-group">
                @using (Html.BeginForm())
                {
                    @Html.Partial("/Areas/AdminArea/Views/Shared/Partial/Message.cshtml")
                    <div class="form-group">
                        @Html.LabelFor(x => x.CategoryName)
                        <hr/>
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "CategoryName" })
                        @Html.ValidationMessageFor(x => x.CategoryName)
                    </div>
                    <div class="form-group">
                        <hr/>
                        @Html.LabelFor(x => x.Description)
                        <hr/>
                        @Html.TextBoxFor(x => x.Description, new {@class = "form-control", placeholder = "Description"})
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>

                    <div class="card-footer">
                        <input type="submit" name="submit" class="btn btn-primary btn-block" />
                    </div>
                }
            </div>
          
        </div>