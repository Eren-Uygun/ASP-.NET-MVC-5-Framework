
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Delete</h2>


@model Crud_HtmlHelper.UI.Areas.AdminArea.Models.CategoryDTO

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Delete Category</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
           
            <div class="form-group">
                @Html.LabelFor(x => x.ID)
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control", placeholder = "CategoryName" })
                @Html.ValidationMessageFor(x => x.ID)
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.ID)
            </div>
            <div class="card-footer">
                <input type="submit" name="submit" class="btn btn-primary btn-block" />
            </div>
        }
    </div>

</div>